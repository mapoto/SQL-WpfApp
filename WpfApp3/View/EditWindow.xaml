<Window x:Class="WpfApp3.View.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3.View" xmlns:viewmodel="clr-namespace:WpfApp3.ViewModel"
        mc:Ignorable="d"
        Title="Edit" Height="250" Width="400">
    <Grid>
        <TextBox Name="InputChoiceTextBox"  HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="354" Height="135" TextChanged="InputChoiceTextBox_TextChanged"/>
        <Button Name="ConfirmChoiceChange" Content="OK" HorizontalAlignment="Center" Margin="0,180,100,0" VerticalAlignment="Center" Width="50" Click="ConfirmChoiceChange_Click" IsEnabled="False"/>
        <Button Name="CancelChoiceChange" Content="Cancel" HorizontalAlignment="Center" Margin="100,180,0,0" VerticalAlignment="Center" Width="50" Click="CancelChoiceChange_Click" />
    </Grid>
</Window>
